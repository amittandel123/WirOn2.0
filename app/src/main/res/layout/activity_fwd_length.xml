<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0599fb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amit.tandel.wir_on.FwdLength">

    <Spinner
        android:id="@+id/machinNumber"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="#b4b6b7"
        style="@style/Base.Widget.AppCompat.Spinner"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etclDia"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/machinNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#b4b6b7"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal|fill_vertical"
        android:hint="Dia in mm"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etclWeight"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etclDia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#b4b6b7"
        android:gravity="center_vertical|center_horizontal|fill_vertical"
        android:hint="Weight in Kg"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bCalcLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etclWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:text="Calculate"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvLen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/bCalcLength"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fbfb04"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLen"
        android:layout_centerHorizontal="true"
        android:text="Length of Coil in Meter"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvCalLength"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fbfb04"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCalLength"
        android:layout_centerHorizontal="true"
        android:text="Calculated Length of Coil in Meter"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp" />
</RelativeLayout>
