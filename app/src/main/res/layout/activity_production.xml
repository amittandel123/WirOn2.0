<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0599fb">

    <EditText
        android:id="@+id/epDia"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="#b4b6b7"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Dia in mm"
        android:gravity="center_vertical|center_horizontal|fill_vertical" />

    <EditText
        android:id="@+id/epSpeedSec"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="#b4b6b7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Speed in m/sec"
        android:gravity="center_vertical|center_horizontal|fill_vertical"
        android:layout_below="@+id/epDia" />
    <TextView
        android:id="@+id/tvSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/epSpeedSec"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="OR"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/epSpeedMin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="#b4b6b7"
        android:layout_centerHorizontal="true"
        android:hint="Speed in m/Min"
        android:gravity="center_vertical|center_horizontal|fill_vertical"
        android:layout_below="@+id/tvSpace" />

    <Button
        android:id="@+id/bCalcProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/epSpeedMin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Calculate"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="24dp"
        android:background="@drawable/custom_button" />

    <TextView
        android:id="@+id/tvProduction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#000000"
        android:background="#fbfb04"
        android:layout_below="@+id/bCalcProd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:numeric="decimal"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Production in Shift (MT)"
        android:textSize="30dp"
        android:layout_below="@+id/tvProduction"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAlignment="center" />

</RelativeLayout>
